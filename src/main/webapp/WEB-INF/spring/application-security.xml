<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
			 xmlns:beans="http://www.springframework.org/schema/beans"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security.xsd

	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<http auto-config="true" use-expressions="true">
<!--		<csrf disabled="true"/>-->
		<access-denied-handler error-page="/accessDenied" />
		<intercept-url pattern="/personalAccount" access="hasRole('ROLE_USER')" />

		<form-login login-page='/login' default-target-url="/account"
			authentication-failure-url="/login?error=true" username-parameter="login"
			password-parameter="password" />

		<logout logout-success-url="/login" />
	</http>

	<beans:bean id="encoder"
				class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
		<beans:constructor-arg name="strength" value="11"/>
	</beans:bean>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
							   users-by-username-query="select login, password, isblock from USERS where login = ?"
							   authorities-by-username-query="select u.login, ur.brief from USERS u, ROLE ur where u.roleid = ur.roleid and u.login = ?" />
			<password-encoder ref="encoder"/>
		</authentication-provider>
	</authentication-manager>
</beans:beans>
